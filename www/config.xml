<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.unoxtutti"
        version   = "1.0.0">

    <name>accessibility advisor</name>

    <description>
       accessibility advisor maps the accessible places in the neighborhood of San Lorenzo, Rome RM
    </description>

    <author href="http://www.borghiartistici.com" email="info@borghiartistici.com">
        BorghiArtistici Team
    </author>
    <!-- Define app icon for each platform. -->
	<icon src="unoxtuttituttixuno.png" />
    <icon src="www/res/icons/android/icon-36-ldpi.png" />
    <icon src="www/res/icons/android/icon-48-mdpi.png" />
    <icon src="www/res/icons/android/icon-72-hdpi.png" />
    <icon src="www/res/icons/android/icon-96-xhdpi.png" />
    <icon src="www/res/icons/android/icon-144-xxhdpi.png" />
    <icon src="www/res/icons/android/icon-192-xxxhdpi.png" />
	 <!-- Define app splash screen for each platform. -->
    <icon src="www/res/screens/android/screen-ldpi-portrait.png" />
    <icon src="www/res/screens/android/screen-mdpi-portrait.png" />
    <icon src="www/res/screens/android/screen-hdpi-portrait.png" />
    <icon src="www/res/screens/android/screen-xhdpi-portrait.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="org.apache.cordova.inappbrowser" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
